extends base

block content 
    if errorMessage 
        span=errorMessage
    main  
        form(method="post") 
            input(type="text", name="title", required, placeholder="Title")
            input(type="text", name="description", required, placeholder="Description")
            input(type="text", name="hashtags", required, placeholder="Hashtags, separated by comma.")
            input(type="submit", value="Upload Video")
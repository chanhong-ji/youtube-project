extends base

block content 
    main 
        if errorMessage 
            span=errorMessage
        img(src=`/${loggedInUser.avatarUrl}`, width="100", height="100")
        form(method="POST", enctype="multipart/form-data")
            input(name="email", type="email", required, placeholder="Email address", value=loggedInUser.email)
            input(name="name",type="text", required, placeholder="Name", value=loggedInUser.name)
            input(name="location", type='text', placeholder="Location", value=loggedInUser.location)
            label(for="avatar") Avatar
            input(name="avatar", id="avatar" type="file", accept="image/*" )
            input(type="submit", value="Update Profile")
            if !loggedInUser.socialOnly 
                hr
                a(href="change-password") Change Password &rarr;
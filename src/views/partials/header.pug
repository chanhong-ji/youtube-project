header
    span.menu-btn
        i.fas.fa-bars.fa-xl
    a(href="/").header__logo
        i.fab.fa-youtube
        span Wetube
    div.search__form-container
        form(method="GET", action="/search").search__form
            input(type="text", required, placeholder="Search by text", name="keyword")
            button
                i.fas.fa-search
    nav
        ul
            if loggedIn
                li
                    a(href="/videos/upload") Upload Video
                li
                    a(href=`/users/${loggedInUser._id}`) My Profile
                li 
                    a(href="/users/edit") Edit profile
                li 
                    a(href="/users/logout") Log out
                li
                    a(href=`/users/${loggedInUser._id}`)
                        img.header__avatar(src=loggedInUser.avatarUrl, crossorigin)
            else
                li 
                    a(href="/login") Login 
                li 
                    a(href="/join").header__btn Join
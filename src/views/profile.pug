extends base
include mixins/video

block content
    div.profile__data
        if loggedInUser.avatarUrl
            img.profile__avatar(src=loggedInUser.avatarUrl, crossorigin)
        else 
            div.profile__avatar
                i.fas.fa-user

        h3=user.name
    div.video-grid
        each video in user.videos
            +video(video)
        else 
            span.empty__message No video found
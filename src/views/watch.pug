extends base

block content
    video(src=`/${video.videoUrl}`, controls)
    div
        button#play Play
        button#mute Mute
        input(type="range", name="range", min="0", max="1", step="0.1", value="0.5")#volume
        div 
            span#currentTime 00:00
            span /
            span#totalTime 00:00

block scripts
    script(src="/build/js/videoPlayer.js")
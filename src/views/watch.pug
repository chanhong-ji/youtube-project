extends base

block content
    video(src=`/${video.videoUrl}`)
    div
        button#play Play
        button#mute Mute
        input(type="range", name="range", min="0", max="1", step="0.1", value="0.5")#volume
        div 
            span#currentTime 00:00
            span /
            span#totalTime 00:00
        div 
            input(type="range", min="0", step="1", value="0")#timeline

block scripts
    script(src="/build/js/videoPlayer.js")
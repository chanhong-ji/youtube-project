extends base

block content
    div#videoContainer(data-id=video._id)
        video(src=`/${video.videoUrl}`)
        div#videoControls.videoControls
            div.videoControls__play
                span#play.videoControls__playBtn
                    i.fas.fa-play
                div.videoControls__time
                    span#currentTime 00:00
                    span /
                    span#totalTime 00:00
            input#timeline.videoControls__timeline(type="range", min="0", step="1", value="0")
            div.videoControls__volume
                input#volume(type="range", name="range", min="0", max="1", step="0.1", value="0.5")
                span#mute 
                    i.fas.fa-volume-up
                span#fullScreen
                    i.fas.fa-expand
    div
        small Uploaded by 
        a(href=`/users/${video.owner._id}`)=video.owner.name
        if String(video.owner._id) === String(loggedInUser._id)
            div
                a(href=`${video.id}/edit`) Edit Video &rarr;
                br
                a(href=`${video.id}/delete`) Delete Video &rarr;
    if loggedIn
        div.video__comments
            form.video__comment-form#commentForm
                textarea(cols="30", rows="10", placeholder="Write a nice comment")
                button Add Comment
    div.video__comments
        ul
            each comment in video.comments.reverse()
                li.video__comment(data-id=comment._id)
                    i.fas.fa-comment
                    span  #{comment.text}
                    if String(comment.owner._id) == loggedInUser._id
                        span ‚ùå

block scripts
    script(src="/build/js/videoPlayer.js")
    if loggedIn
        script(src="/build/js/commentSection.js")
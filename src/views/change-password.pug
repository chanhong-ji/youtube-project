extends base

block content 
    form(method="post") 
        input(type="text", placeholder="Old Password", name="oldPassword", maxlength=30)
        input(type="text", placeholder="New Password", name="newPassword", minlength=8, maxlength=16)
        input(type="text", placeholder="New Password Confirmation", name="newPassword1", maxlength=30)
        if errorMessage
            include partials/errorMessage
        input.change-password__submit(type="submit", value="Change Password")